{
  "permissions": {
    "allow": [
      "WebSearch",
      "Bash(rm:*)",
      "Bash(node scripts/state.js:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(node scripts/validate-state.js:*)",
      "Skill(requirements-expert)",
      "Bash(node scripts/analyze-impact.js:*)",
      "Bash(findstr:*)",
      "Bash(dir:*)",
      "Bash(npm run validate:*)",
      "Bash(npm run validate:state:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(tree:*)",
      "Bash(cat:*)",
      "Bash([ -f \"docs/requirements/specs/requirements-doc.spec.md\" ])",
      "Bash(git mv:*)",
      "Bash(wc:*)",
      "WebFetch(domain:docs.claude.com)",
      "Bash(node scripts/knowledge-base.js:*)",
      "Bash(npm install:*)",
      "Bash(node -e:*)",
      "Bash(npm run test:kb:*)",
      "WebFetch(domain:github.com)",
      "Bash(node src/cli/knowledge-base.js:*)",
      "Read(//d/github_projects/devspec2/**)",
      "Bash(node:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/session-start.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/user-prompt-submit.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/pre-tool-use.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/post-tool-use.js"
          }
        ]
      }
    ]
  }
}
